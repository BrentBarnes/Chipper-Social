
<div class="position-absolute top-50 start-50 translate-middle">
  <h2 class="text-center">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-outline mb-2">
      <%= f.label :email, class: "hidden" %>
      <%= f.email_field :email, placeholder: "Email Address", class: "p-1" %>
    </div>

    <div class="form-outline mb-2">
      <%= f.label :full_name, class: "hidden" %>
      <%= f.text_field :full_name, placeholder: "Full Name", class: "p-1" %>
    </div>

    <div class="form-outline mb-2">
      <%= f.label :password, class: "hidden" %>
      <% if @minimum_password_length %>
      <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "Password", class: "p-1" %>
    </div>

    <div class="form-outline mb-2">
      <%= f.label :password_confirmation, class: "hidden" %>
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "p-1" %>
    </div>

    <div class="actions d-grid gap-2 mb-2">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary d-grid gap-2" %><br />
  <% end %>
</div>
